
<div class="container">
  <h2>Add a new cocktail</h2>
  <%= form_for(@cocktail) do |f| %>
    <div class="field">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

